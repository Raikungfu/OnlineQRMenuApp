                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoffeeShopCustomerId">Edit</a> |
